{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Renewable Energy Investment",
        "fontSize": 20
    },
    "width": "container",
    "height": 400,
    "data": {
        "url": "https://raw.githubusercontent.com/msoo0005/Homework10/main/data/final_money_data.csv"
    },
    "mark": {
        "type": "line",
        "point": true
    },
    "selection": {
        "continent_highlight": {
            "type": "multi",
            "fields": [
                "Technology"
            ],
            "bind": "legend"
        }
    },
    "encoding": {
        "x": {
            "field": "Year",
            "timeUnit": "year"
        },
        "y": {
            "field": "Investment",
            "aggregate": "sum",
            "type": "quantitative",
            "axis": {
                "title": "Public Investment (M USD)"
            }
        },
        "color": {
            "field": "Technology",
            "type": "nominal",
            "scale": {
                "domain": [
                    "Bioenergy",
                    "Geothermal energy",
                    "Hydropower (excl. Pumped Storage)",
                    "Solar energy",
                    "Wind energy"
                ],
                "range": [
                    "#2e1a1a",
                    "#ff8800",
                    "#1100ff",
                    "#ffd900",
                    "#096106"
                ]
            }
        },
        "opacity": {
            "condition": {
                "selection": "continent_highlight",
                "value": 0.8
            },
            "value": 0.2
        },
        "tooltip": [
            {
                "title": "Technology",
                "field": "Technology",
                "type": "nominal"
            },
            {
                "title": "Investment (Million USD)",
                "field": "Investment",
                "type": "quantitative",
                "format": ".0f",
                "aggregate": "sum"
            },
            {
                "title": "Year",
                "field": "Year",
                "type": "quantitative",
                "timeUnit": "year"
            }
        ]
    },
    "config": {
        "font": "Lato"
    }
}
