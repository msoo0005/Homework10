{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
        "params": [
        {
          "name": "YearRange",
          "value": 2000,
          "bind": {
            "input": "range",
            "min": 2000,
            "max": 2018,
            "step": 1,
            "name": "Year: "
          }
        }
        ],
  "vconcat": [
    
    {
      "title": "Ranking",
      "width":"container",
      "data": {
        "url": "https://raw.githubusercontent.com/msoo0005/Homework10/main/data/full_renewable_data.csv"
      },
      "params": [
        {
          "name": "YearRange",
          "value": 2000,
          "bind": {
            "input": "range",
            "min": 2000,
            "max": 2018,
            "step": 1,
            "name": "Year: "
          }
        }
      ],
      "transform": [
        {
          "filter": "datum.Year == YearRange "
        }
      ],
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Electricity Generation (GWh)",
          "aggregate": "sum",
          "type": "quantitative"
        },
        "y": {
          "field": "Region",
          "type": "nominal",
          "sort": "-x"
        },
        "color": {
          "field": "Region",
          "type": "nominal"
        }
      }
    },
    {
      "title": "World Renewable Energy",
      "width":"container",
      "projection": {
        "type": "equalEarth"
      },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/msoo0005/Homework9/main/js/ne_110m_admin_0_countries.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {
            "type": "geoshape",
            "fill": "lightgray",
            "stroke": "white"
          },
          "encoding": {
            "tooltip": {
              "field": "note"
            }
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/msoo0005/Homework10/main/data/final_map_data.csv"
          },
          "transform": [
            {
              "lookup": "Country",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/msoo0005/Homework9/main/js/ne_110m_admin_0_countries.json",
                  "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                  }
                },
                "key": "properties.NAME"
              },
              "as": "geo"
            },
            {
              "filter": "datum.Year == YearRange"
            }
          ],
          "mark": {
            "type": "geoshape",
            "stroke": "white"
          },
          "encoding": {
            "shape": {
              "field": "geo",
              "type": "geojson"
            },
            "color": {
              "field": "RE Percentage",
              "type": "quantitative",
              "scale": {
                "type": "linear",
                "domain": [
                  0,
                  100
                ]
              }
            },
            "tooltip": [
              {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "RE Percentage",
                "type": "quantitative",
                "format": ".2f"
              }
            ]
          }
        }
      ]
    }
  ]
}
