{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "An example of treemap layout for hierarchical data.",
    "width": 800,
    "height": 400,
    "padding": 2.5,
    "autosize": "none",
    "signals": [
        {
            "name": "layout",
            "value": "binary"
        },
        {
            "name": "aspectRatio",
            "value": 2
        }
    ],
    "data": [
        {
            "name": "tree",
            "url": "https://raw.githubusercontent.com/msoo0005/Homework10/main/data/treemap_data.json",
            "transform": [
                {
                    "type": "stratify",
                    "key": "id",
                    "parentKey": "parent"
                },
                {
                    "type": "treemap",
                    "field": "size",
                    "sort": {
                        "field": "value"
                    },
                    "round": true,
                    "method": {
                        "signal": "layout"
                    },
                    "ratio": {
                        "signal": "aspectRatio"
                    },
                    "size": [
                        {
                            "signal": "width"
                        },
                        {
                            "signal": "height"
                        }
                    ]
                }
            ]
        },
        {
            "name": "nodes",
            "source": "tree",
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum.children"
                }
            ]
        },
        {
            "name": "leaves",
            "source": "tree",
            "transform": [
                {
                    "type": "filter",
                    "expr": "!datum.children"
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "nodes",
                "field": "name"
            },
            "range": [
                "#21c400",
                "#cc0000"
            ]
        },
        {
            "name": "size",
            "type": "point",
            "domain": [
                0,
                2,
                2.2,
                4.8,
                10.3,
                16.3,
                64.5
            ],
            "range": [
                7,
                34
            ]
        }
    ],
    "marks": [
        {
            "type": "rect",
            "from": {
                "data": "nodes"
            },
            "interactive": false,
            "encode": {
                "enter": {
                    "fill": {
                        "scale": "color",
                        "field": "name"
                    }
                },
                "update": {
                    "x": {
                        "field": "x0"
                    },
                    "y": {
                        "field": "y0"
                    },
                    "x2": {
                        "field": "x1"
                    },
                    "y2": {
                        "field": "y1"
                    }
                }
            }
        },
        {
            "type": "rect",
            "from": {
                "data": "leaves"
            },
            "encode": {
                "enter": {
                    "stroke": {
                        "value": "#fff"
                    }
                },
                "update": {
                    "x": {
                        "field": "x0"
                    },
                    "y": {
                        "field": "y0"
                    },
                    "x2": {
                        "field": "x1"
                    },
                    "y2": {
                        "field": "y1"
                    },
                    "fill": {
                        "value": "transparent"
                    }
                }
            }
        },
        {
            "type": "text",
            "from": {
                "data": "leaves"
            },
            "interactive": false,
            "encode": {
                "enter": {
                    "font": {
                        "value": "Roboto Condensed"
                    },
                    "align": {
                        "value": "center"
                    },
                    "baseline": {
                        "value": "bottom"
                    },
                    "fill": {
                        "value": "#000"
                    },
                    "text": {
                        "field": "name"
                    },
                    "fontSize": {
                        "scale": "size",
                        "field": "size"
                    }
                },
                "update": {
                    "x": {
                        "signal": "0.5 * (datum.x0 + datum.x1)"
                    },
                    "y": {
                        "signal": "0.5 * (datum.y0 + datum.y1)"
                    }
                }
            }
        },
        {
            "type": "text",
            "from": {
                "data": "leaves"
            },
            "interactive": false,
            "encode": {
                "enter": {
                    "font": {
                        "value": "Didact Gothic"
                    },
                    "align": {
                        "value": "center"
                    },
                    "baseline": {
                        "value": "top"
                    },
                    "fill": {
                        "value": "#000"
                    },
                    "text": {
                        "field": "size"
                    },
                    "fontSize": {
                        "scale": "size",
                        "field": "size"
                    }
                },
                "update": {
                    "x": {
                        "signal": "0.5 * (datum.x0 + datum.x1)"
                    },
                    "y": {
                        "signal": "0.5 * (datum.y0 + datum.y1)"
                    }
                }
            }
        }
    ]
}
