{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text":"Rankings",
        "fontSize": 20
    },
    "data": {
        "url": "https://raw.githubusercontent.com/msoo0005/Homework10/main/data/full_renewable_data.csv"
    },
    "params": [
        {
            "name": "YearRange",
            "value": 2000,
            "bind": {
                "input": "range",
                "min": 2000,
                "max": 2018,
                "step": 1,
                "name": "Year: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Year == YearRange "
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Electricity Generation (GWh)",
            "aggregate":"sum",
            "type": "quantitative"
        },
        "y": {
            "field": "Region",
            "type": "nominal",
            "sort": "-x"      
        },
        "color": {
            "field": "Region",
            "type": "nominal"
        }
    },
    "config": {
        "font": "Lato"
    }
}
